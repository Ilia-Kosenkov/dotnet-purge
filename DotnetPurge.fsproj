<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>DotnetPurge</RootNamespace>
    
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>dotnet-purge</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
      
    <Version>1.0.1</Version>
    <Authors>Ilia Kosenkov</Authors>
    <Description>Fully removes '*bin' and '*obj' directories of .NET projects.</Description>
    <AssemblyName>dotnet-purge</AssemblyName>
    <SatelliteResourceLanguages>en</SatelliteResourceLanguages>

    <PackageProjectUrl>https://github.com/Ilia-Kosenkov/dotnet-purge</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Ilia-Kosenkov/dotnet-purge</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Program.fs" />
  </ItemGroup>

</Project>
